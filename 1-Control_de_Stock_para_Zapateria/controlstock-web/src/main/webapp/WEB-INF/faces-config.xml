<?xml version="1.0" encoding="UTF-8"?>
<faces-config version="1.2" xmlns="http://java.sun.com/xml/ns/javaee"
 xmlns:xi="http://www.w3.org/2001/XInclude"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_1_2.xsd">
 <!-- REGLAS GENERALES -->
 <navigation-rule>
  <navigation-case>
   <from-outcome>LISTA_COMPRAS</from-outcome>
   <to-view-id>/CompraList.xhtml</to-view-id>
  </navigation-case>
 </navigation-rule>
 <navigation-rule>
  <navigation-case>
   <from-outcome>LISTA_VENTAS</from-outcome>
   <to-view-id>/VentaList.xhtml</to-view-id>
  </navigation-case>
 </navigation-rule>
 <navigation-rule>
  <navigation-case>
   <from-outcome>LISTA_ETIQUETAS</from-outcome>
   <to-view-id>/CompraEtiquetaList.xhtml</to-view-id>
  </navigation-case>
 </navigation-rule>
 <navigation-rule>
  <navigation-case>
   <from-outcome>CARGA_COMPRAS</from-outcome>
   <to-view-id>/CompraEdit.xhtml</to-view-id>
  </navigation-case>
 </navigation-rule>
 <navigation-rule>
  <navigation-case>
   <from-outcome>CARGA_PRECIOS</from-outcome>
   <to-view-id>/PrecioEdit.xhtml</to-view-id>
  </navigation-case>
 </navigation-rule>
 <navigation-rule>
  <navigation-case>
   <from-outcome>CARGA_VENTA</from-outcome>
   <to-view-id>/VentaEdit.xhtml</to-view-id>
  </navigation-case>
 </navigation-rule>
 <navigation-rule>
  <navigation-case>
   <from-outcome>VER_VENTA</from-outcome>
   <to-view-id>/Venta.xhtml</to-view-id>
  </navigation-case>
 </navigation-rule>
 <navigation-rule>
  <navigation-case>
   <from-outcome>CARGA_CAMBIO</from-outcome>
   <to-view-id>/Cambio.xhtml</to-view-id>
  </navigation-case>
 </navigation-rule>
 <navigation-rule>
  <navigation-case>
   <from-outcome>CONFIRMAR_CAMBIO</from-outcome>
   <to-view-id>/ConfirmarCambio.xhtml</to-view-id>
  </navigation-case>
 </navigation-rule>
 <navigation-rule>
  <from-view-id>/ArticuloEdit.xhtml</from-view-id>
  <navigation-case>
   <from-outcome>EXITO</from-outcome>
   <to-view-id>/QueDesea.xhtml</to-view-id>
   <redirect/>
  </navigation-case>
 </navigation-rule>
 <navigation-rule>
  <from-view-id>/VentaEdit.xhtml</from-view-id>
  <navigation-case>
   <from-outcome>QUE_DESEA</from-outcome>
   <to-view-id>/QueDesea_Venta.xhtml</to-view-id>
   <redirect/>
  </navigation-case>
 </navigation-rule>
 <!-- Validators -->
 <validator>
  <validator-id>validadorDeArticuloNoVendido</validator-id>
  <validator-class>ar.com.pitasi.zapateria.controlstock.validadores.ValidadorDeArticuloNoVendido</validator-class>
 </validator>
 <validator>
  <validator-id>validadorDeArticuloVendido</validator-id>
  <validator-class>ar.com.pitasi.zapateria.controlstock.validadores.ValidadorDeArticuloVendido</validator-class>
 </validator>
 <validator>
  <validator-id>validadorDeCodigoInexistente</validator-id>
  <validator-class>ar.com.pitasi.zapateria.controlstock.validadores.ValidadorDeCodigoInexistente</validator-class>
 </validator>
 <validator>
  <validator-id>validadorDeArticuloExistente</validator-id>
  <validator-class>ar.com.pitasi.zapateria.controlstock.validadores.ValidadorDeArticuloExistente</validator-class>
 </validator>
 <application>
  <view-handler>com.sun.facelets.FaceletViewHandler</view-handler>
  <locale-config>
   <default-locale>es</default-locale>
  </locale-config>
 </application>
</faces-config>
